%nav.top-bar{"data-topbar" => ""}
  %ul.title-area
    %li.name
      %h1
        %a{href: "/"}
          Hello Fyber!
    %li.toggle-topbar.menu-icon
      %a{href: "#"}
        %span menu
  %section.top-bar-section
    %ul.right
      %li.divider
      %li
        %a{href: "/"} Home
.row
  .large-9.columns
    %h3 Find offers
    .section-container.tabs{"data-section" => ""}
      %section.section
        .content{"data-slug" => "panel1"}
          %form{action: '/offers', method: 'post'}
            .row.collapse
              .large-2.columns
                %label.inline Uid
              .large-10.columns
                %input#uid{placeholder: "uid", type: "text", name: 'uid'}/
            .row.collapse
              .large-2.columns
                %label.inline Pub0
              .large-10.columns
                %input#pub0{placeholder: "pub0", type: "text", name: 'pub0'}/
            .row.collapse
              .large-2.columns
                %label.inline Page
              .large-10.columns
                %input#page{placeholder: "pub0", type: "number", name: 'page', value: '1', step: "1"}/
            %button.radius.button{type: "submit"} Submit

  .large-3.columns